generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String  @id @default(uuid())
  clerkId      String
  name         String
  email        String
  points       Int?    @default(0)
  subscription String?

  @@unique([clerkId])
}

model Courses {
  id          String    @id @default(uuid())
  courseId    Int       @unique
  title       String
  desc        String
  bannerImage String
  level       String?   @default("Beginner")
  tags        String?
  chapters    Chapter[]
}

model Chapter {
  id        String  @id @default(uuid())
  chapterId Int
  name      String
  desc      String
  courseId  Int
  course    Courses @relation(fields: [courseId], references: [courseId], onDelete: Cascade)

  exercises Exercise[]
}

model Exercise {
  id         String  @id @default(uuid())
  name       String
  slug       String
  xp         Int
  difficulty String
  chapterId  String
  Chapter    Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)
}
