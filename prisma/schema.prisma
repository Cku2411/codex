generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 String              @id @default(uuid())
  clerkId            String
  name               String
  email              String
  points             Int?                @default(0)
  subscription       String?
  enrollments        Enrollment[]
  completedExercises completedExercise[]

  @@unique([clerkId])
}

model Courses {
  id          String  @id @default(uuid())
  courseId    Int     @unique
  title       String
  desc        String
  bannerImage String
  level       String? @default("Beginner")
  tags        String?

  chapters           Chapter[]
  enrollments        Enrollment[]
  completedExercises completedExercise[]
}

model Chapter {
  id        String  @id @default(uuid())
  chapterId Int
  name      String
  desc      String
  courseId  Int
  course    Courses @relation(fields: [courseId], references: [courseId], onDelete: Cascade)

  exercises          Exercise[]
  completedExercises completedExercise[]
}

model Exercise {
  id                 String              @id @default(uuid())
  name               String
  slug               String              @unique
  xp                 Int
  difficulty         String
  chapterId          String
  Chapter            Chapter             @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  completedExercises completedExercise[]
  exerciseContent    ExerciseContent?
}

model Enrollment {
  id         String   @id @default(uuid())
  courseId   Int
  userId     String
  enrolledAt DateTime @default(now())
  xpEarned   Int

  course Courses @relation(fields: [courseId], references: [courseId], onDelete: Cascade)
  user   User    @relation(fields: [userId], references: [clerkId], onDelete: Cascade)
}

model completedExercise {
  id         Int    @id
  courseId   Int
  chapterId  String
  exerciseId String
  userId     String

  user     User     @relation(fields: [userId], references: [clerkId], onDelete: Cascade)
  chapter  Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  exercise Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  course   Courses  @relation(fields: [courseId], references: [courseId], onDelete: Cascade)
}

model ExerciseContent {
  id         String   @id @default(uuid())
  exerciseId String   @unique
  exercise   Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)

  objective    String // mục tiêu học tập
  description  String // mô tả chi tiết
  instructions String // hướng dẫn từng bước
  example      String? // ví dụ minh họa (optional)
  task         String // yêu cầu user thực hiện
  evaluation   String? // tiêu chí đánh giá (optional)
}
